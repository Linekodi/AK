<skin>
    <backgrounds>
        <background type="image">
            <width>1280</width>
            <height>720</height>
            <texture>backgrounds/main_background.jpg</texture>
        </background>
    </backgrounds>
    <controls>
        <control type="image">
            <id>101</id>
            <posx>0</posx>
            <posy>0</posy>
            <width>100</width>
            <height>100</height>
            <texture>icons/main_icon.png</texture>
        </control>
        <control type="label">
            <id>102</id>
            <posx>100</posx>
            <posy>0</posy>
            <width>100</width>
            <height>100</height>
            <font>font13</font>
            <text>RealHub</text>
            <textcolor>ffffff</textcolor>
        </control>
        <control type="button">
            <id>200</id>
            <posx>0</posx>
            <posy>120</posy>
            <width>200</width>
            <height>50</height>
            <font>font11</font>
            <text>Filmes</text>
            <textcolor>ffffff</textcolor>
            <disabledtextcolor>808080</disabledtextcolor>
            <selectedtextcolor>1f82d0</selectedtextcolor>
            <texturefocus>buttons/selected.png</texturefocus>
            <onclick>RunScript(script.realhub,list_media,movie)</onclick>
        </control>
        <control type="button">
            <id>201</id>
            <posx>0</posx>
            <posy>180</posy>
            <width>200</width>
            <height>50</height>
            <font>font11</font>
            <text>Séries</text>
            <textcolor>ffffff</textcolor>
            <disabledtextcolor>808080</disabledtextcolor>
            <selectedtextcolor>1f82d0</selectedtextcolor>
            <texturefocus>buttons/selected.png</texturefocus>
            <onclick>RunScript(script.realhub,list_media,series)</onclick>
        </control>
        <control type="button">
            <id>202</id>
            <posx>0</posx>
            <posy>240</posy>
            <width>200</width>
            <height>50</height>
            <font>font11</font>
            <text>Animes</text>
            <textcolor>ffffff</textcolor>
            <disabledtextcolor>808080</disabledtextcolor>
            <selectedtextcolor>1f82d0</selectedtextcolor>
            <texturefocus>buttons/selected.png</texturefocus>
            <onclick>RunScript(script.realhub,list_media,anime)</onclick>
        </control>
    <control type="button">
        <id>203</id>
        <posx>0</posx>
        <posy>300</posy>
        <width>200</width>
        <height>50</height>
        <font>font11</font>
        <text>Pesquisar</text>
        <onclick>RunScript(special://home/addons/plugin.video.realhub/resources/lib/search.py)</onclick>
    </control>
    
    <!-- Lista de mídias -->
    <control type="list">
        <id>300</id>
        <posx>200</posx>
        <posy>0</posy>
        <width>800</width>
        <height>480</height>
        <font>font13</font>
        <textcolor>FFFFFF</textcolor>
        <texturefocus>focus.png</texturefocus>
        <textalign>center</textalign>
        <itemlayout>50</itemlayout>
        <onfocus>UpdateLabel(301)</onfocus>
        <onclick>RunScript(special://home/addons/plugin.video.realhub/resources/lib/play.py)</onclick>
    </control>

    <!-- Rótulo que exibe o título da mídia selecionada -->
    <control type="label">
        <id>301</id>
        <posx>200</posx>
        <posy>480</posy>
        <width>800</width>
        <height>20</height>
        <font>font12</font>
        <textcolor>FFFFFF</textcolor>
        <label></label>
    </control>
</window>

    <!-- Botão Próxima Página -->
    <control type="button">
        <id>400</id>
        <posx>800</posx>
        <posy>500</posy>
        <width>200</width>
        <height>50</height>
        <font>font11</font>
        <text>Próxima Página</text>
        <onclick>Container.Update($INFO[Window(Home).Property(RealHubUrl)],replace)</onclick>
    </control>
    
    <!-- Botão Página Anterior -->
    <control type="button">
        <id>401</id>
        <posx>0</posx>
        <posy>500</posy>
        <width>200</width>
        <height>50</height>
        <font>font11</font>
        <text>Página Anterior</text>
        <onclick>Container.Update($INFO[Window(Home).Property(RealHubUrl)],replace)</onclick>
    </control>
</window>
